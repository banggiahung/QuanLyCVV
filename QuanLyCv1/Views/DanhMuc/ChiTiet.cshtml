
@{
    ViewBag.Title = "Index";
    ViewBag.Content = "Danh Mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var loaiCv = new QuanLyCv1.Models.mapLoaiCongViec().DanhSach();


}

@foreach (var item in loaiCv)
{
    var nhaCungCap = new QuanLyCv1.Models.mapLoaiCongViec().spTimKiem(item.ID);
    <section class="topics-section section-padding pb-0" id="loaiCv=@item.ID">

        <div class="container">
            <div class="row justify-content-center">

                <div class="col-lg-12 col-12">
                    <div class="section-title-wrap mb-5">
                        <h4 class="section-title">@item.LoaiCV</h4>

                    </div>
                </div>

                @foreach (var sanPham in nhaCungCap)
                {
                    <div class="col-lg-6 col-12 mb-4 mb-lg-0 mt-3">
                        <div class="custom-block d-flex">
                            <div class="">
                                <div class="custom-block-icon-wrap">
                                    <div class="section-overlay"></div>
                                    <a href="/Home/Details?id=@sanPham.ID" class="custom-block-image-wrap">
                                        <img src="@sanPham.HinhAnh" class="custom-block-image img-fluid" alt="">

                                        <a href="/Home/Details?id=@sanPham.ID" class="custom-block-icon">
                                            <i class="bi-play-fill"></i>
                                        </a>
                                    </a>
                                </div>
                                @if (sanPham.ID_TrangThai == 2)
                                {
                                    <div class="mt-2">
                                        <a href="/Home/Details?id=@sanPham.ID" class="btn btn-danger">
                                            Hết hạn
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <div class="mt-2">
                                        <a href="/Home/Details?id=@sanPham.ID" class="btn btn-success">
                                            Đang tuyển
                                        </a>
                                    </div>
                                }

                            </div>

                            <div class="custom-block-info">
                                <div class="custom-block-top d-flex mb-1">
                                    <small class="me-4">
                                        <i class="bi-clock-fill custom-icon"></i>
                                        50 Minutes
                                    </small>

                                    <small>Đang xem <span class="badge">15</span></small>
                                </div>

                                <h5 class="mb-2">
                                    <a href="/Home/Details?id=@sanPham.ID">
                                        @sanPham.TenNhaCungCap
                                    </a>
                                </h5>

                                <div class="profile-block d-flex">
                                    <img src="@sanPham.HinhAnh" class="profile-block-image img-fluid" alt="">

                                    <p>
                                        @String.Format("{0:d}", sanPham.NgayDang)
                                        <img src="images/verified.png" class="verified-image img-fluid" alt="">
                                        <strong></strong>
                                    </p>
                                </div>

                                <p class="mb-0">Mức lương: @String.Format("{0:0,0}", sanPham.LuongBatDau)<sup>đ</sup></p>

                                <div class="custom-block-bottom d-flex justify-content-between mt-3">
                                    <a href="/Home/Details?id=@sanPham.ID" class="bi-headphones me-1">
                                        <span>120k</span>
                                    </a>

                                    <a href="/Home/Details?id=@sanPham.ID" class="bi-heart me-1">
                                        <span>42.5k</span>
                                    </a>

                                    <a href="/Home/Details?id=@sanPham.ID" class="bi-chat me-1">
                                        <span>11k</span>
                                    </a>

                                    <a href="/Home/Details?id=@sanPham.ID" class="bi-download">
                                        <span>50k</span>
                                    </a>
                                </div>
                            </div>

                            <div class="d-flex flex-column ms-auto">
                                <a href="#" class="badge ms-auto">
                                    <i class="bi-heart"></i>
                                </a>

                                <a href="#" class="badge ms-auto">
                                    <i class="bi-bookmark"></i>
                                </a>
                            </div>
                        </div>
                    </div>


                }


            </div>
        </div>

    </section>
}


