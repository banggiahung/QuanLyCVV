@model QuanLyCv1.Models.NhaCungCap


@{
    ViewBag.Title = "Chi tiết Công Việc";
    ViewBag.Content = "Chi tiết Công Việc";

    Layout = "~/Views/Shared/_Layout.cshtml";

}


<section class="topics-section section-padding pb-0" id="id=@Model.ID">
    <div class="container">
        <div class="row justify-content-center">

            <div class="col-lg-12 col-12">
                <div class="section-title-wrap mb-5">
                    <h4 class="section-title">Danh mục: @Model.Loai_C_V.LoaiCV</h4>

                </div>
            </div>
            <div class="col-lg-6 col-12 mb-4 mb-lg-0 mt-3">
                <div class="custom-block d-flex">
                    <div class="">
                        <div class="custom-block-icon-wrap">
                            <div class="section-overlay"></div>
                            <a href="detail-page.html" class="custom-block-image-wrap">
                                <img src="@Model.HinhAnh" class="custom-block-image img-fluid" alt="">

                                <a href="#" class="custom-block-icon">
                                    <i class="bi-play-fill"></i>
                                </a>
                            </a>
                        </div>
                        @if (Model.ID_TrangThai == 2)
                        {
                            <div class="mt-2">
                                <a href="#" class="btn btn-danger">
                                    @Model.STT_TT.Loai_Trang_Thai
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="mt-2">
                                <a href="#" class="btn btn-success">
                                    @Model.STT_TT.Loai_Trang_Thai

                                </a>
                            </div>
                        }

                    </div>

                    <div class="custom-block-info">
                        <div class="custom-block-top d-flex mb-1">
                            <small class="me-4">
                                <i class="bi-clock-fill custom-icon"></i>
                                50 Minutes
                            </small>

                            <small>Đang xem <span class="badge">15</span></small>
                        </div>

                        <h5 class="mb-2">
                            <a href="detail-page.html">
                                @Model.TenNhaCungCap
                            </a>
                        </h5>

                        <div class="profile-block d-flex">
                            <img src="@Model.HinhAnh" class="profile-block-image img-fluid" alt="">

                            <p>
                                @String.Format("{0:d}", Model.NgayDang)
                                <img src="images/verified.png" class="verified-image img-fluid" alt="">
                                <strong>@Model.Loai_C_V.LoaiCV</strong>
                            </p>
                        </div>

                        <p class="mb-0">Mức lương: @String.Format("{0:0,0}", Model.LuongBatDau)<sup>đ</sup></p>

                        <div class="custom-block-bottom d-flex justify-content-between mt-3">
                            <a href="#" class="bi-headphones me-1">
                                <span>120k</span>
                            </a>

                            <a href="#" class="bi-heart me-1">
                                <span>42.5k</span>
                            </a>

                            <a href="#" class="bi-chat me-1">
                                <span>11k</span>
                            </a>

                            <a href="#" class="bi-download">
                                <span>50k</span>
                            </a>
                        </div>
                    </div>

                    <div class="d-flex flex-column ms-auto">
                        <a href="#" class="badge ms-auto">
                            <i class="bi-heart"></i>
                        </a>

                        <a href="#" class="badge ms-auto">
                            <i class="bi-bookmark"></i>
                        </a>
                    </div>
                </div>
            </div>




        </div>
    </div>

</section>


